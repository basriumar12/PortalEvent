<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="350dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/foto_category"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher_round"/>
                <TextView
                    android:id="@+id/id_lapak"
                    android:text="id-lapak"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/id_mitra"
                    android:text="id-mitra"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/nama_pelapak"
                    style="@style/TextAppearance.App.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="namapelapak"/>
                <TextView
                    android:id="@+id/id_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="idjenis"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/detail"
                    style="@style/TextAppearance.App.TextView"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="detail"/>
                <TextView
                    android:id="@+id/ketersediaan"
                    style="@style/TextAppearance.App.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ketersediaan"/>
                <TextView
                    android:id="@+id/harga"
                    style="@style/TextAppearance.App.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harga"/>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>